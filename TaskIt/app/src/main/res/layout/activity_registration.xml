<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationActivity"
    android:background="#ff667a">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="SignUp"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:text="Name *"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_alignLeft="@+id/textView3" />

    <EditText
        android:id="@+id/nameField"
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edittext_rounded_corners"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nameField"
        android:layout_marginTop="25dp"
        android:text="Email *"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_alignLeft="@+id/emailSignUp" />

    <EditText
        android:id="@+id/emailSignUp"
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edittext_rounded_corners"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/emailSignUp"
        android:text="Password *"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:layout_alignLeft="@+id/passwordSignUp" />

    <EditText
        android:id="@+id/passwordSignUp"
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:layout_below="@+id/textView4"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edittext_rounded_corners"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/loginText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passwordSignUp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Already have account? Login"
        android:textColor="#ffffff"
        android:layout_alignLeft="@+id/textView4" />

    <Button
        android:id="@+id/signupButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginText"
        android:layout_toRightOf="@id/loginText"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_rounded_corners"
        android:text="Signup"
        android:layout_alignRight="@+id/passwordSignUp" />



</RelativeLayout>